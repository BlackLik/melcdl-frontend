# Build step
FROM node:20-alpine3.20 AS build

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY ./configs/.env .env
COPY . .

RUN npm run build

# Finish step
FROM nginx:alpine3.20

COPY ./configs/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
